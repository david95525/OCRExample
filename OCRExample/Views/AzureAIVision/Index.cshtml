<div class="meatsure-box">
    <div class="row">
        <div class="col-lg-12">
            <div class="ttl-style-2">
                <h2>AddMeasurement</h2>
            </div>
        </div>
    </div>
    <div>
        <div class="row">
            <div class="col-lg-6 col-md-6 col-form-1">
                <video id="videoElement" class="videoElement" autoplay muted playsinline></video>
                <div class="col" id="imageContainer"></div>
            </div>        
            <div class="col-lg-12 col-form-1 mb-0">
                <button class="btn-style-2" id="Scan">
                    Scan
                </button>
                <button class="btn-style-2" id="capture">
                    capture
                </button>
            </div>
            <!--Systolic-->
            <div class="col-lg-4 col-md-6 col-form-1">
                <div class="form-group">
                    <label for="sys" class="form-label">Systolic:</label>
                    <div class="weight-input-box">
                        <div class="weight-input">
                            <div class="select-box">
                                <input id="sys" class="form-control" />
                            </div>
                        </div><span class="unit">mmHg</span>
                    </div>
                </div>
            </div>
            <!--Diastolic-->
            <div class="col-lg-4 col-md-6 col-form-1">
                <div class="form-group">
                    <label for="dia" class="form-label">Diastolic:</label>
                    <div class="weight-input-box">
                        <div class="weight-input">
                            <div class="select-box">
                                <input id="dia" class="form-control" />
                            </div>
                        </div><span class="unit">mmHg</span>
                    </div>
                </div>
            </div>
            <!--Pulse-->
            <div class="col-lg-4 col-md-6 col-form-1">
                <div class="form-group">
                    <label for="pul" class="form-label">Pulse:</label>
                    <div class="weight-input-box">
                        <div class="weight-input">
                            <div class="select-box">
                                <input id="pul" class="form-control" />
                            </div>
                        </div><span>bpm</span>
                    </div>
                </div>
            </div>
            <!--note-->
            <div class="col-lg-12 col-form-1">
                <div class="form-group">
                    <label for="note" class="form-label">Note:</label>
                    <textarea class="form-control focus" placeholder="Notes" name="note" id="note" cols="30" rows="5"></textarea>
                </div>
            </div>
            <div id="content"></div>
            <div id="info"></div>
            <div class="col-lg-12 col-form-1 mb-0">
                <button id="upload" class="btn-style-2">upload</button>
                <button id="confirm" hidden class="btn-style-2">Confirm</button>
            </div>
        </div>
    </div>
</div>

<script src="/js/aiversion.js"></script>